@model AIGenerator.DTOs.ServiceCreateDTO

@{
    Layout = "_AdminLayout";

    ViewData["Title"] = "Create Service";
}

<div class="container mt-5">
    <h2>Create New Service</h2>
    <form asp-controller="Service" asp-action="Create" method="post" enctype="multipart/form-data" class="mt-4">
        <div class="mb-3">
            <label asp-for="ServiceName" class="form-label"></label>
            <input asp-for="ServiceName" class="form-control" />
            <span asp-validation-for="ServiceName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ServiceDescription" class="form-label"></label>
            <textarea asp-for="ServiceDescription" class="form-control" rows="4"></textarea>
            <span asp-validation-for="ServiceDescription" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ServiceImage" class="form-label">Upload Image (Optional)</label>
            <input asp-for="ServiceImage" class="form-control" type="file" accept="image/*" />
            <span asp-validation-for="ServiceImage" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}