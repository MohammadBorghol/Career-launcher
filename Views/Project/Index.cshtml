@model Project

<section class="section py-5 ">
    <p class="mt-5"></p>
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Projects List</h2>
            <a class="btn btn-primary" href="/Project/Add?portfolioId=@ViewBag.portfolioId">New Project</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered  table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Project Name</th>                      
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (List<Project>)ViewBag.projects)
                    {
                        if (!item.isDeleted)
                        {
                            <tr>
                                <td>@item.ProjectName</td>
                                <td>@item.startDate</td>
                                <td>@item.endDate</td>
                                <td>
                                    <a asp-controller="Project" asp-action="Edit" asp-route-ProjectId="@item.projectId" class="btn btn-sm btn-primary me-1">Edit</a>
                                    <a asp-controller="Project" asp-action="Delete" asp-route-ProjectId="@item.projectId" class="btn btn-sm btn-danger me-1"
                                       onclick="return confirm('Are you sure you want to delete this Project?');">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>

</section>
