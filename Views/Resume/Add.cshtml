@using AIGenerator.DTOs
@model ResumeCreateDTO

 <p class="mt-5"></p>
 <section id="contact" class="contact section light-background">
    <div class="container" data-aos="fade-up" data-aos-delay="300">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="contact-form bg-white p-4 rounded shadow-sm">
                    <h3 class="text-center mb-4">Create Resume</h3>

                    <form id="cvForm" target="_blank" asp-controller="Resume" asp-action="Create" method="post" >
                        <div class="row gy-4">

                            <div class="col-md-4">
                                <input type="email" asp-for="email" class="form-control" placeholder="Email" required>
                                <span asp-validation-for="address"></span>

                            </div>

                            <div class="col-md-4">
                                <input type="text"  asp-for="phoneNumber" class="form-control" placeholder="Phone Number" required>
                                <span asp-validation-for="address"></span>

                            </div>

                            <div class="col-md-4">
                                <input type="text"  asp-for="address" class="form-control" placeholder="Address" required>
                                <span asp-validation-for="address"></span>
                            </div>

                            <div class="col-md-4">
                                <input type="url"  asp-for="githubLink" class="form-control" placeholder="GitHub" />
                            </div>

                            <div class="col-md-4">
                                <input type="url"  asp-for="linkedInLink" class="form-control" placeholder="LinkedIn" />
                            </div>

                            <div class="col-md-4">
                                <input type="url"  asp-for="facebookLink" class="form-control" placeholder="Facebook" />
                            </div>

                            <div class="col-12">
                                <textarea asp-for="userPrompt" id="userPrompt" class="form-control" rows="6"
                                placeholder="Write about yourself in your language (Name,Education, Experience,cartificate,skills etc.):" required></textarea>
                            </div>
                           

                            <!-- Hidden field to send merged info -->
                            @* <input type="hidden" name="userInput" id="userInput" /> *@

                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary px-5">Create</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section> 







