@model List<Portfolio>

<section class="section py-5 ">
    <p class="mt-5"></p>
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Portfolio List</h2>
            <a class="btn btn-primary" href="/Portfolio/Add">Create New Portfolio</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered  table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Portfolio Name</th>
                        <th>Title</th>
                        <th>Create Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (!item.isDeleted)
                        {
                                    <tr>
                                        <td>@item.firstName @item.lastName</td>
                                        <td>@item.title</td>
                                        <td>@item.createDate</td>
                                        <td>
                                    <a asp-controller="Portfolio" asp-action="Edit" asp-route-portfolioId="@item.portfolioId" class="btn btn-sm btn-primary me-1">Edit</a>
                                    <a asp-controller="Project" asp-action="Index" asp-route-portfolioId="@item.portfolioId" class="btn btn-sm btn-warning me-1">Projects</a>
                                    <a asp-controller="Portfolio" asp-action="Delete" asp-route-portfolioId="@item.portfolioId" class="btn btn-sm btn-danger me-1"
                                       onclick="return confirm('Are you sure you want to delete this Portfolio?');">Delete</a>
                                    <a asp-controller="Portfolio" asp-action="PortfolioView" asp-route-portfolioId="@item.portfolioId" target="_blank" class="btn btn-sm btn-info">View</a>
                                        </td>
                                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>

</section>
