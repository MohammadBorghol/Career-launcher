<body>

	<div class="fh5co-loader"></div>

	<div id="page">
		<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image:url(images/cover_bg_3.jpg);" data-stellar-background-ratio="0.5">
			<div class="overlay"></div>
			<div class="container">
				<div class="row">
					<div class="col-md-8 col-md-offset-2 text-center">
						<div class="display-t js-fullheight">
							<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
								@if (Model.portfolioImageFile != null)
								{
									string base64Image = Convert.ToBase64String(Model.portfolioImageFile);
									string mimeType = Model.portfolioImageContentType?? "image/jpeg";
									string imageDataUrl = $"data:{mimeType};base64,{base64Image}";
									<div class="profile-thumb" style="background: url('@Url.Content(imageDataUrl)') no-repeat center center / cover;"></div>

								}
								else
								{
									<p>No image uploaded.</p>
								}

								<h1><span>@Model.firstName @Model.lastName</span></h1>
								<h3><span>@Model.title</span></h3>
								<p>
									<ul class="fh5co-social-icons">
										<li><a href="#"><i class="icon-twitter2"></i></a></li>
										<li><a href="#"><i class="icon-facebook2"></i></a></li>
										<li><a href="#"><i class="icon-linkedin2"></i></a></li>
										<li><a href="#"><i class="icon-dribbble2"></i></a></li>
									</ul>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</header>

		<div id="fh5co-about" class="animate-box">
			<div class="container">
				<div class="row">
					<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
						<h2>About Me</h2>
					</div>
				</div>
				<div class="row">
					<div class="col-md-4">
						<ul class="info">
							@if (HasValue(Model.firstName))
							{
								<li>
									<span class="first-block">My Name:</span><span class="second-block">
										@Model.firstName 
										@if (HasValue(Model.secondName))
										{
											@(" " + Model.secondName)
										}
										@if (HasValue(Model.thirdName))
										{
											@(" " + Model.thirdName)
										}
										@if (HasValue(Model.lastName))
										{
											@(" " + Model.lastName)
										}
									</span>
								</li>

							}
							@if (HasValue(Model.phoneNumber))
							{
								<li><span class="first-block">Phone:</span><span class="second-block">@Model.phoneNumber</span></li>

							}
							@if (HasValue(Model.email))
							{
								<li><span class="first-block">Email:</span><span class="second-block">@Model.email</span></li>

							}

							@if (HasValue(Model.address))
							{
								<li><span class="first-block">Address:</span><span class="second-block">@Model.address</span></li>

							}



						</ul>
					</div>
					<div class="col-md-8">
						<h2>Hello There!</h2>
						<p>@Model.summary</p>
						<p>
							<ul class="fh5co-social-icons">
								<li><a href="@Model.githubLink"><i class="icon-github"></i></a></li>
								<li><a href="@Model.facebookLink"><i class="icon-facebook3"></i></a></li>
								<li><a href="@Model.linkedInLink"><i class="icon-linkedin2"></i></a></li>
							</ul>
						</p>
					</div>
				</div>
			</div>
		</div>

		<!--services section-->
		<div id="fh5co-features" class="animate-box">
			<div class="container">
				<div class="services-padding">
					<div class="row">
						<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
							<h2>My Services</h2>
						</div>
					</div>


					<div class="row">



						<div class="row">
							@foreach (var ps in Model.portfolioServices)
							{
								<div class="col-md-4 text-center">
									<div class="feature-left">
										<span class="icon">
											<i class="icon-html-five"></i>
										</span>
										<div class="feature-copy">
											<h3>@ps.service.serviceName</h3>
											<p>@ps.service.ServiceDescription</p> <!-- Optional if Service has description -->
										</div>
									</div>
								</div>
							}
						</div>


					</div>



				</div>
			</div>
		</div>

		<!--start of project section-->
		
		<div id="fh5co-blog">
			<div class="container">
				<div class="row animate-box">
					<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
						<h2>My Work</h2>
						<p>Here are some of my great projects</p>
					</div>
				</div>
				<div class="row">
					@foreach(var pro in Model.projects)
					{
						<div class="col-md-4">
							<div class="fh5co-blog animate-box">
								@if (pro.projectImageFile != null)
								{
									string base64Image = Convert.ToBase64String(pro.projectImageFile);
									string mimeType = pro.projectImageContentType ?? "image/jpeg";
									string imageDataUrl = $"data:{mimeType};base64,{base64Image}";
									<a href="#" class="blog-bg" style="background-image: url('@imageDataUrl');"></a>

								}
								else
								{
									<p>No image uploaded.</p>
								}
								
								<div class="blog-text">
									<span class="posted_on">@pro.service.serviceName</span>
									<h3><a href="#">@pro.ProjectName</a></h3>
									<p>@pro.projectDescription</p>
									<ul class="stuff">
										<li>@pro.startDate - </li>
										<li>@pro.endDate</li>
										@if (pro.projectLink != null)
										{
											<li><a href="@pro.projectLink">Project here<i class="icon-arrow-right22"></i></a></li>

										}
									</ul>
								</div>
							</div>
						</div>
					}
					
					
				</div>
			</div>
		</div>


		<!--Hire me -->
		<div id="fh5co-started" class="fh5co-bg-dark">
			<div class="overlay"></div>
			<div class="container">
				<div class="row animate-box">
					<div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
						<h2>Hire Me!</h2>
						<p></p>
						<p><a href="#" class="btn btn-default btn-lg">Contact Us</a></p>
					</div>
				</div>
			</div>
		</div>
	

	</div>

